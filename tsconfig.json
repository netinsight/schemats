{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2021",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "rootDir": "./",
        "outDir": "./dist",
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./bin/**/*.ts"],
    "exclude": ["node_modules"]
}
